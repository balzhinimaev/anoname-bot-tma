{
  "name": "anonamebot",
  "version": "1.0.0",
  "private": true,
  "description": "Minimal production-ready Telegram bot with webhook (Telegraf + Express + TypeScript + dotenv).",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "telegraf": "^4.16.3"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/node": "^20.12.7",
    "tsx": "^4.15.7",
    "typescript": "^5.4.5"
  }
}
